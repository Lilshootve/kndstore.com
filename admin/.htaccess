# Disable caching for all admin pages — Apache / LiteSpeed

<IfModule mod_headers.c>
    Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"
</IfModule>

# LiteSpeed Cache — exclude /admin from cache
<IfModule LiteSpeed>
    CacheLookup off
</IfModule>
